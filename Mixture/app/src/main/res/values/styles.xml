    <style name="LayoutStilo2">
        <item name="android:background">@drawable/layout_estilo2</item>
    </style>


    <style name="LayoutStilo">
        <item name="android:background">@drawable/layout_estilo</item>
    </style>
    <style name="ButtonStilo">
