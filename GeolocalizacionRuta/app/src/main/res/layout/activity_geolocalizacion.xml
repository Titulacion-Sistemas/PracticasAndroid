<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Geolocalizacion">

    <TextView
        android:id="@+id/txt_distancia_tiempo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="hola soy andrea"/>

    <Button android:id="@+id/btn_draw" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:text="Ruta"
        android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" />

    <fragment android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_above="@id/btn_draw"
        android:layout_alignBaseline="@+id/txt_distancia_tiempo"/>



</RelativeLayout>
